利用者 <%= @family.care_recipitent_name %>さんの記録

<table border="5">
<h3>バイタル記録</h3>
<% @family.vitals.each do |vital| %>
<tr bgcolor="pink">

<th bgcolor=" #E0FFFF">日付</th>
<th>体温</th>
<th>血圧</th>
<th>脈拍</th>
<th>呼吸回数</th>
<th>酸素濃度</th>
</tr>
<tr>
<td><%= vital.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= vital.temperature %>℃</td>
<td><%= vital.low_blood_pressure %>/<%= vital.hign_blood_pressure %></td>
<td><%= vital.pulse %>回/分</td>
<td><%= vital.breathing %>回/分</td>
<td><%= vital.spo2 %>%</td>
</tr>
<% end %>
</table>

<table border="5">
<h3>排泄記録</h3>
<% @family.excretas.each do |excreta| %>
<tr bgcolor="pink">

<th bgcolor=" #E0FFFF">日付</th>
<th>排尿</th>
<th>排泄</th>

</tr>
<tr>
<td><%= excreta.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= excreta.judge_pee ? "○": "×" %></td>
<td><%= excreta.judge_shit ? "○": "×" %></td>
</tr>
<% end %>
</table>

<table border="5">
<h3>食事記録</h3>
<% @family.meals.each do |meal| %>
<tr bgcolor="pink">

<th bgcolor=" #E0FFFF">日付</th>
<th>朝食</th>
<th>昼食</th>
<th>おやつ</th>
<th>夕食</th>

</tr>
<tr>
<td><%= meal.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= meal.breakfast ? "○": "×" %></td>
<td><%= meal.lunch ? "○": "×" %></td>
<td><%= meal.snack ? "○": "×" %></td>
<td><%= meal.dinner ? "○": "×" %></td>
</tr>
<% end %>
</table>

<table border="5">
<h3>水分量記録</h3>
<% @family.intake_waters.each do |intake_water| %>
<tr bgcolor="pink">

<th bgcolor=" #E0FFFF">日付</th>
<th>水分量</th>


</tr>
<tr>
<td><%= intake_water.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= intake_water.amount_of_water %>cc</td>
</tr>
<% end %>
</table>

<table border="5">
<h3>入浴量記録</h3>
<% @family.bathing_days.each do |bathing_day| %>
<tr bgcolor="pink">

<th bgcolor=" #E0FFFF">日付</th>
<th>水分量</th>

</tr>
<tr>
<td><%= bathing_day.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= bathing_day.judge_bath ? "○": "×" %></td>
</tr>
<% end %>
</table>

<table border="5">
<h3>服薬記録</h3>
<% @family.medicines.each do |medicine| %>
<tr bgcolor="pink">

<th bgcolor=" #E0FFFF">日付</th>
<th>朝食前</th>
<th>朝食後</th>
<th>昼食前</th>
<th>昼食後</th>
<th>夕食前</th>
<th>夕食技</th>
<th>目薬</th>
<th>塗り薬</th>

</tr>
<tr>
<td><%= medicine.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= medicine.check_before_breakfast ? "○": "×" %></td>
<td><%= medicine.check_after_breakfast ? "○": "×" %></td>
<td><%= medicine.check_before_lunch ? "○": "×" %></td>
<td><%= medicine.check_after_lunch ? "○": "×" %></td>
<td><%= medicine.check_before_dinner ? "○": "×" %></td>
<td><%= medicine.check_after_dinner ? "○": "×" %></td>
<td><%= medicine.check_eye_drops ? "○": "×" %></td>
<td><%= medicine.check_ointment ? "○": "×" %></td>
</tr>
<% end %>
</table>

<table border="5">
<h3>活動記録</h3>
<% @family.behavior_histories.each do |behavior_history| %>
<tr bgcolor="pink">
<th bgcolor=" #E0FFFF">日付</th>
<th>記録内容</th>


</tr>
<tr>
<td><%= behavior_history.created_at.strftime("%Y年%m月%d日") %></td>
<td><%= behavior_history.action_record %></td>

</tr>
<% end %>
</table>


