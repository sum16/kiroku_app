<% @title = "イベント詳細情報" %>
<h2><%= @title %></h2>

<div class="table-wrapper">
  <% p = EventPresenter.new(@event, self) %>
  <table class="attributes">
    <tr><th>タイトル</th><td><%= p.title %></td></tr>
    <tr>
      <th>申し込み開始日時</th>
      <td class="date"><%= p.application_start_time %></td>
    </tr>
    <tr>
      <th>申し込み終了日時</th>
      <td class="date"><%= p.application_end_time %></td>
    </tr>
    <tr>
      <th>最小参加者数</th>
      <td class="numeric"><%= p.min_number_of_participants %></td>
    </tr>
    <tr>
      <th>最大参加者数</th>
      <td class="numeric"><%= p.max_number_of_participants %></td>
    </tr>
  </table>


  <p class="center-p">
    <%= p.description %>
  </p>

  <div class="center-div">
  <%= p.apply_or_cancel_button %>
  </div>
    

  
</div>

