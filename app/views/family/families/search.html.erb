<h1>検索結果</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>体温</th>
      <th>血圧</th>
      <th>脈拍</th>
      <th>呼吸回数</th>
      <th>酸素濃度</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |vital| %>
      <tr>
        <td><%= vital.measuring_date.strftime("%Y年%m月%d日") %></td>
        <td><%= vital.temperature %>℃</td> 
        <td><%= vital.low_blood_pressure %>/<%= vital.hign_blood_pressure %></td>
        <td><%= vital.pulse %>回/分</td> 
        <td><%= vital.breathing %>回/分</td>
        <td><%= vital.spo2 %>%</td> 
      </tr>
    <% end %>
  </tbody>
</table>

