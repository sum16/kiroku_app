     <%= f.text_field :name, required: true, class: "Form-Item-Input" %>
  </div>
  <div class="Form-Item">
     <p class="Form-Item-Label"><span class="Form-Item-Label-Required"></span>年齢</p>
     <%= f.text_field :age, required: true, class: "Form-Item-Input" %>
  </div>
  <input type="submit" class="Form-Btn" value="送信する">
</div>
