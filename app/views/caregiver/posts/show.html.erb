<% @title = "申し送り詳細" %>
<div class="page-title">
   <h2><%= @title %></h2>
</div>

<div class="caregiver-page">
  <div class="l-wrapper_06">
    <div class="card_06"> 
      <div class="card-content_06">
        <p class="card-title_06"><%= @post.title %></p>
        <p class="card-text_06">内容: <%= @post.body %></p>
        <p class="card-text_06">投稿者: <%= @post.caregiver.name %></p>
      </div>
      <div class="card-link_06">
         <%= @post.created_at.strftime("%Y年%m月%d日") %>
      </div>  
    </div>
   </div>
  </div>

<ul class="link-list">
   <li>
      <%= link_to "編集する", edit_caregiver_post_path(@post), class: "btn btn--yellow btn--cubic" %>
   </li>
   <li>
      <%= link_to "戻る", caregiver_posts_path, class: "btn btn--yellow btn--cubic" %>
   </li>
</ul>



