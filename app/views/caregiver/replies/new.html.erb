<% @title = "問い合わせへの返信" %>
<h2><%= @title %></h2>

<%#= confirm_caregiver_message_reply_path%>
<div id="generic-form" class="table-wrapper">
  <%= form_with model: @reply, url: caregiver_message_reply_path(@message), local: true do |f| %>
    <%= render "form", f: f %>
    <div class="buttons">
      <%= f.submit "送信" %> <br>
    </div>
  <% end %>
</div>

<%= render "message" %>

<ul class="link-list">
  <li><%= link_to "トップページへ戻る", caregiver_staff_members_path, class: "btn btn--yellow btn--cubic" %></li>
</ul>

