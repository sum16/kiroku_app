<% @title = "利用者詳細情報" %>
<h2><%= @title %></h2>

<div class="table-wrapper">
  <table class="attributes">
    <tr><th colspan="2">基本情報</th></tr>
    <tr><th>氏名</th><td><%= @customer.family_name %><%= @customer.given_name %></td></tr>
    <tr><th>フリガナ</th><td><%= @customer.family_name_kana %><%= @customer.given_name_kana %></td></tr>
    <tr><th>性別</th><td><%= judge_gender(@customer.gender) %></td></tr>
    <tr><th>登録日時</th><td class="date"><%= @customer.created_at.strftime("%Y年%m月%d日%H時%M分") %></td></tr>
    <tr><th>更新日時</th><td class="date"><%= @customer.updated_at.strftime("%Y年%m月%d日%H時%M分") %></td></tr>


      <tr><th colspan="2">自宅住所</th></tr>
      <tr><th>郵便番号</th><td><%= @customer.customer_address.postal_code %></td></tr>
      <tr><th>都道府県</th><td><%= @customer.customer_address.prefecture %></td></tr>
      <tr><th>市区町村</th><td><%= @customer.customer_address.city %></td></tr>
      <tr><th>町域、番地等</th><td><%= @customer.customer_address.address1 %></td></tr>
      <tr><th>建物名、部屋番号等</th><td><%= @customer.customer_address.address2 %></td></tr>


      <tr><th colspan="2">勤務先</th></tr>
      <tr><th>会社名</th><td><%= @customer.customer_address.company_name %></td></tr>


  </table>

  <%= link_to "編集", edit_caregiver_staff_member_customer_path %>
</div>
