<% @title = "利用者管理画面" %>
<h2><%= @title %></h2>

<li>
  <%= link_to "利用者情報", caregiver_tops_path, class: "btn btn--yellow btn--cubic" %>
  </li>

<p>検索フォーム</p>
  <%= render "search_form" %>
  
<div class="table-wrapper">
  <div class="links">
    <%#= link_to "新規登録", :new_staff_customer %>
  </div>

  <%#= paginate @customers %>

  <table class="listing">
    <tr>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>性別</th>
      <th>アクション</th>
    </tr>
    <% @customers.each do |c| %>
  
      <tr>
      <% p = CustomerPresenter.new(c,self)%>
        <td><%= c.given_name %></td>
        <td><%= c.given_name_kana %></td>
        <td><%= p.gender %></td>
        <td class="actions">
          <%= link_to "詳細", caregiver_staff_member_customer_path(:staff_member_id, c.id) %> |
          <%= link_to "編集", edit_caregiver_staff_member_customer_path(:staff_member_id, c.id) %>
          <%= button_to "削除", caregiver_staff_member_customer_path(:staff_member_id, c.id), method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>


  <%= paginate @customers %>
</div>
