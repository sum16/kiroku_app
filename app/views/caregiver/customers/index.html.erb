<% @title = "顧客管理" %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <div class="links">
    <%#= link_to "新規登録", :new_staff_customer %>
  </div>

  <%#= paginate @customers %>

  <table class="listing">
    <tr>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>性別</th>
      <th>アクション</th>
    </tr>
    <% @customers.each do |c| %>
  
      <tr>
      <% p = CustomerPresenter.new(c,self)%>
        <td><%= c.given_name %></td>
        <td><%= c.given_name_kana %></td>
        <td><%= p.gender %></td>
        <td class="actions">
          <%= link_to "詳細", caregiver_staff_member_customer_path(:staff_member_id, c.id) %>|
          <%= button_to "削除", caregiver_staff_member_customer_path(:staff_member_id, c.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= paginate @customers %>

  <div class="links">
    <%#= link_to "新規登録", :new_staff_customer %>
  </div>
</div>
